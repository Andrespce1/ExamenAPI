<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExamenAPI.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Consumo de API Users" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label Text="Es una API sencilla sacada de internet" FontSize="Title" Padding="30,10,30,10"/>
        
        <Label x:Name="lblDatos" Text="Id"></Label>
        <Entry Placeholder="id" x:Name="txtId" />
        <Entry Placeholder="userId" x:Name="txtuserId" IsEnabled="False"/>
        <Entry Placeholder="tittle" x:Name="txtTittle" />
        <Entry Placeholder="body" x:Name="txtBody" />
        <Button Text="Leer datos" Clicked="Button_Clicked"></Button>
        <Button Text="Ingresar Datos" Clicked="Button_Clicked_1"></Button>
        <Button Text="Actualizar Datos" Clicked="Button_Clicked_2"></Button>
        <Button Text="Borrar Datos" Clicked="Button_Clicked_3"></Button>
    </StackLayout>
    

</ContentPage>
